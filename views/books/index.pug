extends ../layout

block content
  h1.index-title Books
  p
    form(action="/books/search" class="search-form" method="post")
      input(name="search" type="search" placeholder="Title, Author etc...")
      input.search(type="submit" value="Search")
    p
      a.button(href="/books/new") Create New Book
  br
  p
    table.table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
      tbody
        each book in books
          tr
            td
              a(href="/books/" + book.id) #{book.title}
            td #{book.author}
            td #{book.genre}
            td #{book.year}
  p.pag Pages:
    if paginate.hasPreviousPages || paginate.hasNextPages(pageCount)
      if pages
        each page in pages
          a.btn.btn-default(href=page.url)= page.number
      