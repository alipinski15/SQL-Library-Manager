extends ../layout

block content
  h1.index-title Results
  p
    form.form(action="/books/search" class="search-form" method="post")
      a.button-create(href="/books/") Show All Books
      input.search(name="search" type="search" placeholder="Title, Author etc...")
      input.search-button(type="submit" value="Search")
  br
  p
    table.table 
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
      tbody
        each book in books
          tr
            td
              a(href="/books/" + book.id) #{book.title}
            td #{book.author}
            td #{book.genre}
            td #{book.year}